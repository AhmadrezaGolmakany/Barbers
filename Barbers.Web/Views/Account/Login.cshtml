@model Barbers.Core.DTOs.LoginViewModel

@{
    ViewData["Title"] = "ورود";
}


<div class="site-section bg-light" id="contact-section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-5">
                <h2>ورود به باربرز</h2>

            </div>
            
        </div>
        <div class="row ">
            @if (ViewBag.EditeProfile == true)
            {
                <div class="alert alert-warning">
                    بدلیل ویرایش اطلاعات و بارگزاری اطلاعات جدید لطفا مجددا وارد شوید!!!
                </div>
            }
            <div class="col-lg-8 mb-5">
                <form asp-action="Login" method="post">
                    <div class="form-group row">
                        <div class="col-md-12 mb-4 mb-lg-0">
                            <input asp-for="UserName" type="text" class="form-control" placeholder="نام کاربری">
                            <span asp-validation-for="UserName"></span>

                        </div>

                    </div>



                    <div class="form-group row">
                        <div class="col-md-12">
                            <input asp-for="password" type="password" class="form-control" placeholder="رمز عبور">
                            <span asp-validation-for="password"></span>

                        </div>
                    </div>
                    <div class="remember-me">
                        <label><input asp-for="RememberMe" type="checkbox" name=""> مرا بخاطر بسپار </label>
                    </div>



                    <div class="form-group row">
                        <div class="col-md-12">
                            <a href="/Register">حساب کاربری ندارید!!</a>

                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <a href="/ForgetPassword">رمز عبور خود را فراموش کرده اید؟!</a>

                        </div>
                    </div>


                    <div class="form-group row">
                        <div class="col-md-8 mr-auto">
                            <input type="submit" class="btn btn-primary text-white py-3 px-5" value="ورود">
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>