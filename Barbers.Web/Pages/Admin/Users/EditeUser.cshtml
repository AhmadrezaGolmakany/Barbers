@page "{id}"
@using Barber.Data.Entities.User
@using Barbers.Core.Services.Premition
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Barbers.Web.Pages.Admin.Users.EditeUserModel
@inject IPremitionService _PremitionService
@{

    List<Role> role = _PremitionService.GetAllRoles();
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش کاربر </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Edite.UserId" />

        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعات کاربر
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    
                    <div class="form-group">
                        <label>نام کاربری</label>
                        <label class="text-success">@Model.Edite.UserName</label>
                    </div>
                    @* <div class="form-group">
                        <label>نام کاربری</label>
                        <input type="text" asp-for="Edite.UserName" class="form-control">
                    </div> *@
                    <div class="form-group">
                        <label>نام و نام خانوادگی</label>
                        <input type="text" asp-for="Edite.FullName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>تلفن همراه</label>
                        <input type="text" asp-for="Edite.Phone" class="form-control">
                    </div>


                    <div class="form-group">
                        <label>ایمیل</label>
                        <input type="email" asp-for="Edite.Email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>کلمه عبور</label>
                        <input type="text" asp-for="Edite.Password" class="form-control">
                    </div>

                    <div class="form-group">
                        <label>انتخاب نقش کاربر</label>
                        @foreach (var item in role)
                        {
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="selectesRole" value="@item.RoleId" @((Model.Edite.UserRole.Any(r => r == item.RoleId) ? "checked" : ""))>@item.RorleTitel
                                </label>
                            </div>
                        }

                    </div>
                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success"/>
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
       

    </form>
</div>