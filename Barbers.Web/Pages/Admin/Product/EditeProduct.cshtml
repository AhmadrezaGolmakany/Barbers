@page "{id}"
@model Barbers.Web.Pages.Admin.Product.EditeProductModel
@{
}



<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش کالا </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Model.ID" />

        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعات کاربر
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">

                    <div class="form-group">
                        <label>نام کالا</label>
                        <input type="text" asp-for="Model.Name" class="form-control">
                    </div>
                    
                    <div class="form-group">
                        <label>قیمت</label>
                        <input type="text" asp-for="Model.Price" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>توضیحات</label>
                        <textarea type="text" rows="10" asp-for="Model.Dscription" class="form-control"></textarea>
                    </div>
                    

                    
                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>


    </form>
</div>
@section Scripts {
    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
    <script>

        CKEDITOR.replace('Model_Dscription', {
            customConfig: '/js/Config.js'
        });

    </script>
}