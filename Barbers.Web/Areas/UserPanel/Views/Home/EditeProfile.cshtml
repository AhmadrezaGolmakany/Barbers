@model Barbers.Core.DTOs.EditeProfileUserViewModel
@{
    ViewData["Title"] = "ویرایش پروفایل";
}

<div class="site-section bg-light" id="contact-section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-5">
                <h2>ویرایش اطلاعات</h2>

            </div>
        </div>
        <div class="row ">
            <div class="col-lg-8 mb-5">
                <form asp-action="EditeProfile" method="post">
                    @if (ViewBag.IsSuccess != null)
                    {
                        <div class="alert alert-success">
                            ویرایش حساب با موفقیت انجام شد
                        </div>
                    }
                    <div class="form-group row">
                        <div class="col-md-12 mb-4 mb-lg-0">
                            <input asp-for="FullName" type="text" class="form-control" placeholder="نام و نام خانوادگی">

                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-md-12 mb-4 mb-lg-0">
                            <input asp-for="UserName" type="text" class="form-control" placeholder="نام کاربری">


                        </div>

                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <input asp-for="Email" type="email" class="form-control" placeholder="آدرس ایمیل">

                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <input asp-for="Phone" type="text" class="form-control" placeholder="تلفن همراه">

                        </div>
                    </div>




                    <div class="form-group row">
                        <div class="col-md-8 mr-auto">
                            <input type="submit" class="btn btn-primary text-white py-3 px-5" value="ویرایش اطلاعات">
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

